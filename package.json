{
  "name": "donategifts",
  "description": "Every child should feel valued, remembered, and loved Donate holiday & birthday gifts to the kids who may not otherwise get one ",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist ./coverage ./node_modules",
    "coverage": "jest --runInBand --coverage",
    "dev": "GOOGLE_APPLICATION_CREDENTIALS=donate-gifts.json nodemon --inspect=0.0.0.0:9229 -e ts,js -w src -r ts-node/register src/",
    "husky": "npx husky install",
    "lint": "eslint --cache --fix --ext .ts --ignore-path .eslintignore src/",
    "notusedpostinstall": "npm run prisma:generate && npm run husky",
    "prisma:generate": "npx prisma generate",
    "prisma:introspect": "npx prisma introspect",
    "prisma:migrate-dev": "npx prisma migrate dev --name ",
    "seed-database": "npx ts-node scripts/seed-db.ts",
    "start": "node dist/index.js",
    "init-database": "docker-compose up -d && npm run seed-database",
    "test:watch": "jest tests --watch",
    "test": "jest tests",
    "upgradeDeps": "npx ncu -u"
  },
  "author": "DonateGifts Inc.",
  "license": "NPOSL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donategifts/donategifts.git"
  },
