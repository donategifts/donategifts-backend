    "graphql-scalars": "1.13.6",
    "graphql-subscriptions": "1.2.1",
    "log4js": "6.3.0",
    "nodemailer": "6.7.0",
    "nodemailer-mailgun-transport": "2.1.3",
    "reflect-metadata": "0.1.13",
    "subscriptions-transport-ws": "0.11.0",
    "type-graphql": "1.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
