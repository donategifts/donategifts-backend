{
  "name": "donategifts",
  "description": "Every child should feel valued, remembered, and loved Donate holiday & birthday gifts to the kids who may not otherwise get one ",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./node_modules ./dist",
    "coverage": "jest --runInBand --coverage",
    "dev": "nodemon --inspect=0.0.0.0:9229 -e ts,js -w src --exec node -r ./loadEnv.js -r ts-node/register src/",
    "husky": "npx husky install",
    "lint": "eslint --cache --fix --ext .ts --ignore-path .eslintignore src/",
    "postinstall": "npm run prisma:generate && npm run husky",
    "prisma:generate": "npx prisma generate",
    "prisma:introspect": "npx prisma introspect",
    "prisma:migrate-dev": "npx prisma migrate dev --name ",
    "start": "node dist/index.js",
    "test-integration:watch": "jest --runInBand --testPathIgnorePatterns tests/unit/ --watch",
    "test-integration": "jest --runInBand --testPathIgnorePatterns tests/unit/",
    "test:watch": "jest --testPathIgnorePatterns tests/integration/ --watch",
    "test": "jest --testPathIgnorePatterns tests/integration/",
    "upgradeDeps": "npx ncu -u"
  },
  "author": "DonateGifts Inc.",
  "license": "NPOSL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donategifts/donategifts.git"
  },
  "dependencies": {
    "@prisma/client": "2.28.0",
    "@types/express": "4.17.12",
    "apollo-server-express": "3.1.2",
    "axios": "0.21.1",
    "bcrypt": "5.0.1",
    "cors": "2.8.5",
    "date-fns": "2.23.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "graphql": "15.5.0",
    "graphql-subscriptions": "1.2.1",
    "jsonwebtoken": "8.5.1",
    "log4js": "6.3.0",
    "nodemailer": "6.6.2",
    "nodemailer-mailgun-transport": "2.1.3",
    "reflect-metadata": "0.1.13",
    "subscriptions-transport-ws": "0.9.19",
    "type-graphql": "1.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/cors": "2.8.10",
    "@types/jsonwebtoken": "8.5.1",
